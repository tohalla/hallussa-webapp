{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "style/*": ["./src/style/*"],
      "assets/*": ["/assets/*"]
    },
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
