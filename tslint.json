{
  "extends": [
    "tslint:latest",
    "tslint-eslint-rules"
  ],
  "rules": {
    "semicolon": [true, "always"],
    "indent": [true, "spaces", 2],
    "ter-indent": [true, 2],
    "interface-name": [true, "never-prefix"],
    "no-submodule-imports": false,
    "no-implicit-dependencies": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "whitespace": [true, "check-branch", "check-operator", "check-module", "check-decl", "check-rest-spread"]
  }
}
